<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>User CRUD</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 30px;
            background: #f4f4f4;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        form {
            background: #fff;
            padding: 20px;
            margin-bottom: 30px;
            border-radius: 5px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
            max-width: 500px;
            margin-left: auto;
            margin-right: auto;
        }

        form input {
            width: 95%;
            padding: 8px;
            margin: 8px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        form button {
            padding: 10px 15px;
            border: none;
            background: #28a745;
            color: white;
            border-radius: 4px;
            cursor: pointer;
        }

        form button:hover {
            background: #218838;
        }

        table {
            width: 80%;
            margin: auto;
            border-collapse: collapse;
            background: #fff;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
        }

        table th,
        table td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: center;
        }

        table th {
            background: #007bff;
            color: white;
        }

        a,
        button {
            margin: 0 5px;
            padding: 6px 12px;
            border: none;
            border-radius: 4px;
            text-decoration: none;
            cursor: pointer;
        }

        .edit-btn {
            background: #ffc107;
            color: black;
        }

        .delete-btn {
            background: #dc3545;
            color: white;
        }
    </style>
</head>

<body>

    <h1>User Management</h1>

    <!-- User Form (Add / Update) -->
    <form action="<%= editUser ? '/crud/update/' + editUser.id : '/crud/add' %>" method="POST">
        <input type="text" name="name" placeholder="Enter Name" value="<%= editUser ? editUser.name : '' %>" required>
        <input type="email" name="email" placeholder="Enter Email" value="<%= editUser ? editUser.email : '' %>"
            required>
        <input type="number" name="age" placeholder="Enter Age" value="<%= editUser ? editUser.age : '' %>" required>
        <input type="text" name="mobile" placeholder="Enter Mobile" value="<%= editUser ? editUser.mobile : '' %>"
            required>
        <button type="submit">
            <%= editUser ? 'Update User' : 'Add User' %>
        </button>
        <% if (editUser) { %>
            <a href="/crud/"
                style="background: #6c757d; color:white; padding: 10px 15px; border-radius: 4px;">Cancel</a>
            <% } %>
    </form>

    <!-- User List -->
    <table>
        <thead>
            <tr>
                <!-- <th>ID</th> -->
                <th>Name</th>
                <th>Email</th>
                <th>Age</th>
                <th>Mobile</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (users.length> 0) { %>
                <% users.forEach(user=> { %>
                    <tr>
                        <!-- <td>
                            <%= user.id %>
                        </td> -->
                        <td>
                            <%= user.name %>
                        </td>
                        <td>
                            <%= user.email %>
                        </td>
                        <td>
                            <%= user.age %>
                        </td>
                        <td>
                            <%= user.mobile %>
                        </td>
                        <td>
                            <a href="/crud/edit/<%= user.id %>" class="edit-btn">Edit</a>
                            <form action="/crud/delete/<%= user.id %>" method="POST" style="display:inline;">
                                <button type="submit" class="delete-btn">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="6">No users found</td>
                            </tr>
                            <% } %>
        </tbody>
    </table>

</body>

</html>